@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Lični podaci";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Vaš račun sadrži lične podatke koje ste nam pružili. Ova stranica Vam omogućava preuzimanje i brisanje tih podataka</p>
        <p>
            <strong>Brisanje ovih podataka će trajno ukloniti Vaš račun i povratak nije moguć.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Preuzmi</button>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Izbriši</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
