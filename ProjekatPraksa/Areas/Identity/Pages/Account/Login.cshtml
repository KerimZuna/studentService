@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row align-items-center" style="height:100vh">
    <div class="mx-auto col-10 col-md-8 col-lg-6">
          <form id="account" method="post">
            <h1 class="d-flex align-content-center justify-content-center">@ViewData["Title"]</h1>
              <hr />
              <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
              <div class="form-floating mb-3">
                  <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                  <label asp-for="Input.Email" class="form-label">Email</label>
                  <span asp-validation-for="Input.Email" class="text-danger"></span>
              </div>
              <div class="form-floating mb-3">
                  <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                  <label asp-for="Input.Password" class="form-label">Šifra</label>
                  <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>
              <div class="checkbox mb-3">
                  <label asp-for="Input.RememberMe" class="form-label">
                      <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                      </label>
              </div>
              <div>
                  <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
              </div>
              <div class="pt-2">
                  <a class="w-100 btn btn-lg btn-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registracija</a>
              </div>
          </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
