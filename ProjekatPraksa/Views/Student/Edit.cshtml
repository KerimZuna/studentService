@model ProjekatPraksa.Models.StudentEntity

@{
    ViewData["Title"] = "Edit";
}

<h2 class="d-flex justify-content-center align-content-center pt-3">UREDI PODATKE</h2>

<hr />
<div class="d-flex justify-content-center align-content-center">
    <div class="row" style="width: 380px">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label>Ime</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Prezime</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <input asp-for="Mobile" class="form-control" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Slika</label>
                    <div class="custom-file">
                        <input asp-for="Image" class="custom-file-input" id="FLImage">
                        <label class="custom-file-label" for="FLImage"></label>
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>

                </div>
                <div class="form-group d-flex justify-content-center pt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <div style="width: 5px"></div>
                    <a class="btn btn-secondary" asp-action="Index">Nazad</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
